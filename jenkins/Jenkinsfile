pipeline {
  agent any
  environment {
    IMAGE_NAME = "ml-api"
    PORT = "5000"
  }
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Build & Test Python') {
      steps {
        sh 'python3 -m venv .venv'
        sh '. .venv/bin/activate && pip install -r src/requirements.txt'
        sh '. .venv/bin/activate && pytest -q || true'
      }
    }
    stage('Docker Build') {
      steps {
        sh 'docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} -f docker/Dockerfile .'
      }
    }
    stage('Run Container') {
      steps {
        sh 'docker stop ${IMAGE_NAME} || true'
        sh 'docker rm ${IMAGE_NAME} || true'
        sh 'docker run -d --name ${IMAGE_NAME} -p ${PORT}:5000 ${IMAGE_NAME}:${BUILD_NUMBER}'
      }
    }
    stage('Smoke Test') {
      steps {
        sh 'sleep 5'
        sh 'curl -f http://localhost:5000/health'
      }
    }
  }
}
